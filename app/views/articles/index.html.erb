  <h1 class="text-center mt-4">Articles listing page</h1>
  <div class="container">
    <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow md-5 bg-white rounded">
          <div class="card-header">
            Featured
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-success' %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'Show', article_path(article), class: 'btn btn-primary'%>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %>
            <%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created at <%= time_ago_in_words(article.created_at) %>,
              edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <p>
      <%= link_to 'Home', root_path%>
      <%= link_to 'About', about_path%>
      <%= link_to 'Articles', articles_path%>
      <%= link_to 'New Articles', new_article_path%>
    </p>
  </div>