<h1 class="text-center">Showing Article Details</h1>
<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow md-5 bg-white rounded">
      <div class="card-header">
        Featured
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @article.title %></h5>
        <div class="card-text text-left"><%= @article.description %></div>
        <%= link_to 'Articles', articles_path, class: 'btn btn-primary'%>
        <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %>
        <%= link_to 'Delete', article_path(@article), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?"} %>
      </div>
      <div class="card-footer text-muted">
        <small>Created at <%= time_ago_in_words(@article.created_at) %>,
          edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
      </div>
    </div>
  </div>
</div>